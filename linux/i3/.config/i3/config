
# General settings
set $mod Mod1
set $term kitty

# Gaps and borders
gaps inner 10
gaps outer 5
gaps top 30
# new_window normal 2
# new_float normal 2
#

new_window none
new_float none


# General window settings
for_window [class=".*"] border pixel 0 
for_window [all] border pixel 5
# for_window [class="Polybar"] focus off

hide_edge_borders both
# default_border pixel 5
# i3-msg [class=.*] border pixel 1


# Start essential applications
exec --no-startup-id picom --config ~/.config/picom/picom.conf
exec_always --no-startup-id killall polybar; ~/.config/polybar/launch_polybar.sh --reload
exec --no-startup-id dunst
exec_always feh --bg-scale ~/.config/backgrounds/mistbg.jpg
exec --no-startup-id dex --autostart --environment i3
bindsym $mod+t exec --no-startup-id "pgrep autotiling && pkill autotiling || autotiling"
# exec_always --no-startup-id xset dpms 30 60 60
# exec_always --no-startup-id xss-lock --transfer-sleep-lock -- systemd-inhibit --what=handle-lid-switch --mode=block bash -c "sleep 60 && systemctl suspend" &
# exec_always --no-startup-id systemd-inhibit --what=sleep --mode=block i3lock --nofork --tiling --image='/home/mufeedcm/.config/backgrounds/mistbg.png'
# # exec_always --no-startup-id xss-lock --transfer-sleep-lock -- bash -c "sleep 600  && systemctl suspend &&i3lock --nofork --tiling --image='/home/mufeedcm/.config/backgrounds/mistbg.png'"

exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork --tiling --image='/home/mufeedcm/.config/backgrounds/mistbg_blurred.png'
bindsym $mod+Shift+s exec i3lock --nofork -tiling --image='/home/mufeedcm/.config/backgrounds/mistbg_blurred.png' & systemctl suspend
exec --no-startup-id nm-applet
exec --no-startup-id setxkbmap -option ctrl:nocaps
exec --no-startup-id xcape -e 'Control_L=Escape'

# Font and theme settings
font pango:Meslo LGM Nerd Font 10

# Launch rofi
bindsym $mod+space exec rofi -show combi

# Keybindings for volume control
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Screenshot keybindings
bindsym Print exec maim "/home/$USER/Pictures/$(date).jpg"
bindsym $mod+Print exec maim --window $(xdotool getactivewindow) "/home/$USER/Pictures/$(date).jpg"
bindsym Shift+Print exec maim --select "/home/$USER/Pictures/$(date).jpg"
bindsym Ctrl+Print exec maim | xclip -selection clipboard -t image/png
bindsym Ctrl+$mod+Print exec maim --window $(xdotool getactivewindow) | xclip -selection clipboard -t image/png
bindsym Ctrl+Shift+Print exec maim --select | xclip -selection clipboard -t image/png

# Dunst toggle
bindsym $mod+Shift+d exec dunstctl set-paused toggle

# System controls
# bindsym $mod+Shift+s exec i3lock --nofork -tiling --image='/home/mufeedcm/.config/backgrounds/mistbg.png' & systemctl suspend
bindsym $mod+Shift+t exec systemctl reboot
bindsym $mod+Shift+u exec systemctl poweroff

# Launch terminal
bindsym $mod+Return exec kitty




# Window management
bindsym $mod+x kill
bindsym $mod+d exec --no-startup-id dmenu_run
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+space floating toggle

# Workspace management
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Reload and restart i3
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# Exit i3
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# Window resize mode
mode "resize" {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym k resize grow height 10 px or 10 ppt
    bindsym j resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"
# Gruvbox Colors
set $bg_dark       #282828
set $bg            #1d2021
set $bg_highlight  #3c3836
set $terminal_black #504945
set $fg            #ebdbb2
set $fg_dark       #d5c4a1
set $fg_gutter     #7c6f64
set $blue          #83a598
set $cyan          #8ec07c
set $purple        #d3869b
set $orange        #fe8019
set $yellow        #fabd2f
set $green         #b8bb26
set $red           #fb4934
set $error         #cc241d

# Window colors
client.focused          $bg_dark    $blue       $bg_dark    $cyan       $blue
client.focused_inactive $bg_highlight $fg_dark   $bg_highlight $fg_gutter $fg_gutter
client.urgent           $red        $bg_dark    $red        $error      $red
client.placeholder      $bg_highlight $fg_dark   $fg_gutter $fg_gutter  $fg_gutter
client.background       $bg_dark

